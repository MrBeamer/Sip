
<!-- Side navigation -->
<div class="sidenav">
  <h1>Sip</h1>
  <%= link_to "Home", root_path%>
  <a href="https://www.google.de/" target="_blank">Search</a>
  <%= link_to "Add", new_cocktail_path%>
  <!-- test -->

      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <p class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </p>
      <% end %>


<!-- footer -->
<div id="footer-box">
  <div class="footer-links">
      <a href="https://github.com/MrBeamer" target="_blank"><i class="fab fa-github"></i></a>
  </div>
  <div class="footer-links">
    <a href="https://www.instagram.com/theweekendmixologist/" target="_blank"><i class="fab fa-instagram"></i></a>
  </div>
</div>
</div>

<!-- card section -->
<div class="main">
  <div class="cards">
<% @cocktails.each do |cocktail| %>
<% if cocktail.photo.attached? %>
<% background_url = cl_image_path cocktail.photo.key, width: 500, height: 600, crop: :fill %>
<% else %>
<% background_url = 'https://images.unsplash.com/photo-1570204865352-934c744d682c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80'%>
<% end %>

  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
    <%=  link_to cocktail.name, cocktail_path(cocktail)%>
          <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Delete this cocktail?' } do %>
    <i class="fas fa-times"></i>
    <% end %>
  </div>

<% end %>
</div>
</div>




