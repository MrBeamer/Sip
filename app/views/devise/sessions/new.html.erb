<div class="form-background " style="background-image:  url(https://miro.medium.com/max/2000/1*WoSMKbxL7UpNgxg_4axFtQ.jpeg);">
  <div class="container-sm form-size">
    <div class="form-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <h2>Log in</h2>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <!--f.input :remember_me, as: :boolean if devise_mapping.rememberable? -->
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button-form-all" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
